---
import Circles from '../components/circles.astro';
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
const title = "Fast DDD";
const courseEntries = await getCollection('course');
---

<Layout title={title}>
    <section class="index__first_section ripple-background">
      <div>
        <h1 class="index__heading">Fast DDD</h1>
        <p class="index__subheading">
          Practical domain driven design. 
        </p>
        <a
          href="/Fast-DDD/course/unit-1"
        >Start here</a>
        <Circles/>
      </div>

    </section>
    <section class="index__second_section">
      <h2 class="index__heading">Course content</h2>
      <ul>
        {courseEntries.map((blogPostEntry, index) => (
          <li>
            <a href={`/Fast-DDD/course/${blogPostEntry.slug}`}>Unit {index + 1 }: {blogPostEntry.data.title}</a>
          </li>
        ))}
      </ul>
    </section>
</Layout>

