---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const title = "Welcome to Fast DDD course.";
---

<Layout title={title}>
	<main >
    <nav >
      <a href="/">Home</a>
      <a href="/about/">About</a>
    </nav>
    <section class="index__first_section ripple-background">
      <div>
        <h1 class="index__heading">Fast DDD</h1>
        <p class="index__subheading">
          A big little introductiom to practical domain driven design. 
        </p>
        <a
          href="/course/introduction"
        >Start here</a>
      </div>
      <div class="circle xxlarge shade1"></div>
      <div class="circle xlarge shade2"></div>
      <div class="circle large shade3"></div>
      <div class="circle mediun shade4"></div>
      <div class="circle small shade5"></div>
    </section>
	</main>
</Layout>

<style is:global>
main {
  display: flex;
  flex-direction: column;
}

body{
  background: #3399ff;
  color: white;
}

.index__first_section {
  height: 90vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

h1 {
  font-weight: 800;
  font-size: 8rem;
}

.circle{
  position: absolute;
  right: 0;
  border-radius: 50%;
  background: white;
  animation: ripple 15s infinite;
  box-shadow: 0px 0px 1px 0px #508fb9;
}

.small{
  width: 200px;
  height: 200px;
  right: -100px;
  bottom: -100px;
}

.medium{
  width: 400px;
  height: 400px;
  right: -200px;
  bottom: -200px;
}

.large{
  width: 600px;
  height: 600px;
  right: -300px;
  bottom: -300px;
}

.xlarge{
  width: 800px;
  height: 800px;
  right: -400px;
  bottom: -400px;
}

.xxlarge{
  width: 1000px;
  height: 1000px;
  right: -500px;
  bottom: -500px;
}

.shade1{
  opacity: 0.2;
}
.shade2{
  opacity: 0.5;
}

.shade3{
  opacity: 0.7;
}

.shade4{
  opacity: 0.8;
}

.shade5{
  opacity: 0.9;
}

@keyframes ripple{
  0%{
    transform: scale(0.8);
  }
  
  50%{
    transform: scale(1.6);
  }
  
  100%{
    transform: scale(0.8);
  }
}

</style>
