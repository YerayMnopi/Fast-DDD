---
import { ViewTransitions } from 'astro:transitions';
import Circles from '../components/circles.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<nav >
			<a href="/Fast-DDD/">Home</a>
			<a href="/Fast-DDD/about/">About</a>
		</nav>
		<main>
			<slot />
			<Circles/>
		</main>
	</body>
</html>
<style is:global>
	main {
	  max-width: 50%;
	  justify-content: center;
	}
	
	body{
		display: flex;
	  flex-direction: column;
	  background: #3399ff;
	  color: white;
	  align-items: center;
	  justify-content: center;

	}
	
	.index__first_section {
	  height: 90vh;
	  display: flex;
	  justify-content: center;
	  align-items: center;
	}
	
	h1 {
	  font-weight: 800;
	  font-size: 8rem;
	  margin-top: 2rem;
	}
	h2 {
	  font-weight: 500;
	  font-size: 5rem;
	  margin-top: 2rem;
	}

	h3 {
	  font-weight: 500;
	  font-size: 3rem;
	  margin-top: 2rem;
	}

</style>
	