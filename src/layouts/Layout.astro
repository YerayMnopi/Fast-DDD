---
import { ViewTransitions } from 'astro:transitions';
import Circles from '../components/circles.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<nav>
			<a class="nav__home" href="/Fast-DDD/">Fast DDD</a>
			<a href="/Fast-DDD/about/">Author</a>
		</nav>
		<main>
			<slot />
		</main>
		<footer>
			<a class="nav__home" href="/Fast-DDD/">Fast DDD</a>
			<a class="nav__home" href="/Fast-DDD/bibliography">References</a>
		</footer>
	</body>
</html>
<style is:global>
	main {
	  max-width: 50%;
	  display: flex;
	  justify-content: left;
	  align-items: left;
	  margin-top: 35vh;
	  padding-bottom: 20vh;
	  flex-direction: column;
	}
	
	body {
		display: flex;
	  flex-direction: column;
	  background: #3399ff;
	  color: white;
	  align-items: center;
	  justify-content: center;

	}
	
	nav {
		width: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 1rem 2rem;	
		background-color: #33FFFF;
		color: #07294b;
		font-weight: 600;
		border-left: #07294b 1rem solid;
		position: fixed;
		top: 0;
		left: 0;
	}

	section {
		overflow: hidden;
	}

	footer {
		background-color: #07294b;
		height: 50vh;
		width: 100%;
		padding: 1rem 2rem;	

	}
	
	.nav__home {
		font-size: 2rem;
	}

	.index__first_section {
	  margin-bottom: 50vh;
	}
	
	h1 {
	  font-weight: 900;
	  font-size: 8rem;
	  margin-top: 4rem;
	}
	h2 {
	  font-weight: 600;
	  font-size: 5rem;
	  margin-top: 4rem;
	}

	h3 {
	  font-weight: 500;
	  font-size: 3rem;
	  margin-top: 3rem;
	}
	
	li {
		list-style: circle;
		margin-bottom: 10px;
	}

</style>
	